{
  "compilerOptions": {
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "allowSyntheticDefaultImports": true,
    "target": "es5",
    "sourceMap": true,
    "removeComments": false,
    "strict": true,
    "baseUrl": "./src/",
    "paths": {
      "@/*": ["app/*"]
    },
    "module": "esnext",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "jsx": "react",
    "lib": ["dom", "es2017"]
  },
  "include": ["src/app/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
